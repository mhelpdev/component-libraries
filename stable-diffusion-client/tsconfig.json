{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "dist/esm",
    "allowJs": true,
    "jsx": "react",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}